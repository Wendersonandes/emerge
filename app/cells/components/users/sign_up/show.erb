<div class="auth__form">
<div class="auth__providers">
	<% providers.each do |provider| %>
		<div class="auth__providers__provider">
			<%= link_to provider_auth_path(provider, flow: flow), data: {flow: flow, provider: provider}, class: css_class do %>
				<i class="sico-<%= provider %> sico-fixed"></i>
				<%= Authentication.provider_name(provider) %>
			<% end %>
		</div>
	<% end %>
</div>
<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
	<%= f.input :email, autofocus: true, required: true %>
	<% if resource.new_record? %>
			<%= f.input :password, required: true, autocomplete: 'off' %>
	<% else # updating resource %>
		<%= f.input :password, autocomplete: 'off' %>
		<% if resource.password_required? %>
			<%= f.input :current_password, autocomplete: 'off' %>
		<% end %>
	<% end %>
	<% if resource.try(:first_name).present? or resource.try(:last_name).present? %>
		<%= f.input :first_name %>
		<%= f.input :last_name %>
	<% end %>
	<%= f.button :submit, class: 'btn-primary' %>
<% end %>

</div>

