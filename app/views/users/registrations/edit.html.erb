<div class="col-sm-8">
	<%= render 'layouts/account_tabs' %>
	<% if devise_mapping.confirmable? and not resource.confirmed? %>
		<div class="alert alert-warning alert-dismissable">
			<button aria-hidden="<%= true %>" class="close" data-dismiss="alert">&times;</button>
			<p>
				<%= I18n.t 'devise.registrations.signed_up_but_unconfirmed' %>
			</p>
			<p>
				<%= button_to I18n.t('auth.confirm.submit'), confirmation_path(resource_name), class: 'btn btn-warning btn-xs' %>
			</p>
		</div>
	<% end %>
	<%= simple_form_for resource, as: resource_name, :remote => true, url: registration_path(resource_name), :validate => true do |f| %>
		<%= f.input :email, autofocus: true, required: true %>
			<%= f.input :password, autocomplete: 'off' %>
			<% if resource.password_required? %>
				<%= f.input :current_password, autocomplete: 'off' %>
			<% end %>
			<%= f.input :first_name %>
			<%= f.input :last_name %>
		<%= f.button :submit, class: 'btn-primary' %>
	<% end %>
	<%= render 'users/shared/links', disable_signup: true %>
</div>
