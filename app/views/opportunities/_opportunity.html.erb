<div class="col-sm-12 col-md-6 col-lg-4">

	<div class="thumbnail pa0">
		<%= link_to opportunity do %>
			<div class="card__opportunities relative h5 h5-l bg-top cover bg-black" style="background-image: url(<%= image_path(opportunity.featured_image_url(:thumb) || "alone-clouds-hills-1909-527x350.jpg")%>);">
			</div>
		<% end %>
		<div class="caption">
			<%= link_to opportunity do %>
				<h4 class="f3">
					<%= opportunity.title %>
				</h4>
			<% end %>
			<p class="f4 measure avenir">
				<%= opportunity.summary %>
			</p>
			<a href="#" class="btn btn-primary btn-xs" role="button">
				<i class="glyphicon glyphicon-bookmark"></i>
					<%= opportunity.follow_count %>
			</a> 
			<a href="#" class="btn btn-default btn-xs" role="button">
				<i class="glyphicon glyphicon-heart-empty"></i>
				40
			</a>
			<a href="#" class="btn btn-default btn-xs pull-right" role="button">
				<i class="glyphicon glyphicon-eye-open"></i>
					<%= opportunity.impressionist_count(:filter=>:ip_address) %>
			</a>

		</div>
	</div>
</div>
