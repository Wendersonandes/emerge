<div class="row">
	<div class="col-sm-4">
		<%= render 'elements/left_bar'%>
	</div>
	<div class="col-sm-8">
		<div class="row">
			<% @tags.each do |tag|%>
				<%= link_to tag.name, opportunities_path(tag: tag.name), :class => "label label-info"%>
			<% end %>
		</div>
		<div class="row card__container">
			<% @opportunities.each do |opportunity| %>
				<%= render 'opportunity', :opportunity => opportunity %>
			<% end%>
		</div>
	</div>
</div>
