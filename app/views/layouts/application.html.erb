<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html class="no-js" lang="en">
	<head>
		<meta charset="utf-8"/>
		<meta content="width=device-width, initial-scale=1.0" name="viewport"/>
		<title>
			<%= content_for?(:title) ? yield(:title) : I18n.t('brand.name')%>
		</title>
		<meta content="<%=content_for?(:description) ? yield(:description) : I18n.t('brand.name')%>" name='description'>

		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
		<!--[if lt IE 9]
			<%= javascript_include_tag 'ie', 'data-turbolinks-track' => true %>
    -->
    <!-- Aqui -->
		<%= csrf_meta_tags %>
		<%= yield :head %>
		<%= render 'layouts/airbrake' %>
	</head>
  <body class="controller__<%= controller_name %> action__<%= action_name %>">
    <div id="menu"></div>
		<div class="container pt6">
			<div class="errors__container">
				<%= render 'layouts/messages' %>
			</div>
      <%= yield %>
      </div>
      <div id="app"></div>
			<%= yield %>
      <footer class="page__footer">
        <% if content_for? :footer %>
          <%= yield :footer %>
        <% else %>
          <%= render 'layouts/footer' %>
        <% end %>
      </footer>
		</div>
		<%= render 'layouts/analytics' %>
    <%= render 'layouts/javascripts' %>
    <%= javascript_include_tag 'bundle-react', 'data-turbolinks-track' => true %>
    </div>
    <%= javascript_include_tag 'application'  %>
		<%= render 'layouts/analytics' %>
	</body>
</html>
