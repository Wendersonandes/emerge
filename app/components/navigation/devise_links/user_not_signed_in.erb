<% disable_login ||= false %>
<% disable_signup ||= false %>
<% disable_forgot ||= false %>
<div class="auth__links">
	<label>
		<%= I18n.t 'auth.links.title' %>
	</label>
	<ul>
		<% if !disable_login and controller.controller_name != 'sessions' %>
			<li>
				<%= link_to I18n.t('auth.login.link'), new_session_path(resource_name) %>
			</li>
		<% end %>
		<% if !disable_signup and devise_mapping.registerable? and controller.controller_name != 'registrations' %>
		<li>
			<%= link_to I18n.t('auth.signup.link'), new_registration_path(resource_name) %>
		</li>
		<% end %>
		<% if !disable_forgot and devise_mapping.recoverable? and controller.controller_name != 'passwords' and controller.controller_name != 'registrations' %>
			<li>
				<%= link_to I18n.t('auth.forgot.link'), new_password_path(resource_name) %>
			</li>
		<% end %>
		<% if devise_mapping.confirmable? and controller.controller_name != 'confirmations' %>
			<li>
				<%= link_to I18n.t('auth.confirm.link'), new_confirmation_path(resource_name) %>
			</li>
		<% end %>
		<% if devise_mapping.lockable? and resource_class.unlock_strategy_enabled?(:email) and controller.controller_name != 'unlocks' %>
			<li>
				<%= link_to I18n.t('auth.unlock.link'), new_unlock_path(resource_name) %>
			</li>
		<% end %>
		</ul>
</div>
